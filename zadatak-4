// ConsoleApplication5.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include "pch.h"
#include <iostream>
#include <fstream>
#include <string>

using namespace std;

class Trokut {
private:
	double a, b, c;
public:
	double upis() {
		cin >> a;
		cin >> b;
		cin >> c;
		return a, b, c;
	};
	bool provjera() {
		if ((a >= (b + c)) || (b >= (a + c)) || (c >= (a + b)))
			return 0;
		else
			return 1;
	};
	double opseg() {
		return a + b + c;
	};
	double povrsina() {
		double p = opseg() / 2;
		return sqrt(p*(p - a)*(p - b)*(p - c));
	};
	double najveca() {
		if (a > b && a > c)
			return 1;
		else if (b > a && b > c)
			return 2;
		else
			return 3;
	};
};

int main()
{
	Trokut t;
	double d, e, f;
	cout << "Unesi duljine stranica trokuta (a, b, c): ";
	t.upis();
	cout << endl;
	if (t.provjera() == 1) {
		cout << "Opseg trokuta: " << t.opseg() << endl;
		cout << "Povrsina trokuta: " << t.povrsina() << endl;
	}
	else
		cout << "Stranice trokuta nisu valjane." << endl;
	if (t.najveca() == 1)
		cout << "A";
	else if (t.najveca() == 2)
		cout << "B";
	else
		cout << "C";
	cout << " je najveca stranica trokuta." << endl;
	return 0;
}
