// ConsoleApplication5.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include "pch.h"
#include <iostream>
#include <fstream>
#include <string>

using namespace std;

struct Trokut {
	double a, b, c;
	bool provjera() {
		if ((a >= (b + c)) || (b >= (a + c)) || (c >= (a + b)))
			return 0;
		else
			return 1;
	};
	double opseg() {
		return a + b + c;
	};
	double povrsina() {
		double p = opseg() / 2;
		return sqrt(p*(p - a)*(p - b)*(p - c));
	};
};

int main()
{
	Trokut t;
	cout << "Unesi duljine stranica trokuta (a, b, c): " << endl;
	cin >> t.a;
	cin >> t.b;
	cin >> t.c;
	if (t.provjera() == 1) {
		cout << "Opseg trokuta: " << t.opseg() << endl;
		cout << "Povrsina trokuta: " << t.povrsina() << endl;
	}
	else
		cout << "Stranice trokuta nisu valjane." << endl;
	return 0;
}
